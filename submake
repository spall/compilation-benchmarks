#!/bin/sh

cdir=$PWD

echo "executing sub-make: $CURSCNUM : $@ ; in directory $cdir" &>> ${OUTPUTFILE}

ov1=$(date +%s%N)
overhead=$((($(date +%s%N) - ${ov1})))

tsl=$(date +%s%N) 

/usr/bin/make --debug=v MAKE="submake" SHELL="rusage /bin/sh" "$@"

tt=$((($(date +%s%N) - ${tsl} - ${overhead}))) 

echo "submake-argv= $@\n elapsed= ${tt}\n finishing sub-make: $CURSCNUM : $@ ; in directory $cdir" &>> ${OUTPUTFILE}
