#!/bin/sh

old=$(cat ${SCNUM})

export CURSCNUM=${old}

echo "$((old+1))" > ${SCNUM}

echo "executing shell-command: $old $@" &>> ${OUTPUTFILE}

ov1=$(date +%s%N)
overhead=$((($(date +%s%N) - ${ov1})))

tsl=$(date +%s%N) && "$@" && te=$(date +%s%N) && tt=$(((${te} - ${tsl} - ${overhead})))

echo "argv= $@" &>> ${OUTPUTFILE}
echo "elapsed= ${tt}" &>> ${OUTPUTFILE}
echo "finished shell-command: ${old}" &>> ${OUTPUTFILE}
